<body >

  <!-- Rest of your HTML content -->
  <div class="container p-4   " style="border-radius: 10px;">
    <h1 class="display-5 text-center mb-4 text-danger fw-bolder">To-Do List</h1>
    <div class="card mb-4">
      <div class="card-body">
        <h4 class="card-title text-primary fw-bolder  text-center" style="font-size: 30px;"> <%=listtitle%></h4>
        <ul class="list-group">
          <% newitems.forEach((newitem) => { %>
          <li class="list-group-item fw-bold" style="color: #E966A0;font-size: 20px;">
            <form class="form-check" action="/delete" method="post">
              <input class="form-check-input" type="checkbox" name="di" value=<%= newitem._id %> id="item<%= newitem._id %>" onChange="this.form.submit()">
              <label class="form-check-label" for="item<%= newitem._id %>">
                <%= newitem.name %>
              </label>
              <input type="hidden" name="deleteList" value=<%= listtitle %>>
            </form>
           
          </li>
          <% }) %>
        </ul>
    <form action="/" method="post" class="mb-4 mt-4">
      <div class="input-group">
        <input type="text" name="newitem" class="form-control" placeholder="Add an item"  >
        <button type="submit" class="btn btn-success btn-lg" name="list" value=<%=listtitle%>>Add Item</button>
      </div>
    </form>

   
    <form action='/' class="mb-4">
      
        <button type="submit" class="btn  btn-lg "  style="color: #FFDEB9; background-color: #FF0060;">home</button>
     
    </form>
  
    

  </div>

